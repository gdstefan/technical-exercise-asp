@model SiteDrugRequest

@{
    ViewData["Title"] = "Request";
}

<div class="row d-flex justify-content-between">
    <div class="col-md-4">
        <h1>Request</h1>
        <form asp-action="RequestDrugs">
            <div class="form-group">
                <label asp-for="SiteId" class="control-label">Site</label>
                <select asp-for="SiteId" class="form-control" asp-items="ViewBag.SiteNames"></select>
                <span asp-validation-for="SiteId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DrugTypeId" class="control-label"></label>
                <select asp-for="DrugTypeId" class="form-control" asp-items="ViewBag.DrugCodes"></select>
                <span asp-validation-for="DrugTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RequestedQuantity" class="control-label">Requested Quantity</label>
                <input asp-for="RequestedQuantity" class="form-control" />
                <span asp-validation-for="RequestedQuantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Associate" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
